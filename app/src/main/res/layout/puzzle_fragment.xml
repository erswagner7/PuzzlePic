<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="@+id/appName"
    android:background="@color/matteGray"
    tools:context=".ui.puzzle.PuzzleFragment"
    android:id="@+id/puzzle">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="346dp"
        android:layout_height="572dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/creamBackground"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/navBarImageButton"
            android:layout_width="@dimen/image_button_xlarge"
            android:layout_height="@dimen/image_button_xlarge"
            android:background="@color/creamBackground"
            android:contentDescription="@string/navbar_image_button_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_image"
            tools:src="@drawable/ic_image" />

        <ImageButton
            android:id="@+id/navBarCameraButton"
            android:layout_width="@dimen/image_button_xlarge"
            android:layout_height="@dimen/image_button_xlarge"
            android:background="@color/creamBackground"
            android:contentDescription="@string/navbar_camera_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/navBarUserButton"
            android:layout_width="@dimen/image_button_xlarge"
            android:layout_height="@dimen/image_button_xlarge"
            android:background="@color/creamBackground"
            android:contentDescription="@string/navbar_user_image_description"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_user" />
    </LinearLayout>


    <ImageView
        android:id="@+id/bigPicture"
        android:layout_width="320dp"
        android:layout_height="450dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNavBar"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <Button
        android:id="@+id/savePuzzleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Save Image"
        app:layout_constraintEnd_toStartOf="@+id/puzzlifyButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare9" />

    <Button
        android:id="@+id/puzzlifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Puzzlify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cancelButton"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/savePuzzleButton"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare9"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/puzzlifyButton"
        app:layout_constraintTop_toBottomOf="@id/topNavBar"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/saveSuccessText"
        android:layout_width="326dp"
        android:layout_height="116dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNavBar"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare1"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="375dp"
        android:layout_marginRight="375dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/topNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savePuzzleButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare2"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="450dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/topNavBar"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare3"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="450dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/topNavBar"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare2"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare4"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="375dp"
        android:layout_marginRight="375dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savePuzzleButton"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare1"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare5"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare4"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare2"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare6"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare5"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare3"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare7"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="375dp"
        android:layout_marginRight="375dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savePuzzleButton"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare4"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare8"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare7"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare5"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/puzzleSquare9"
        android:layout_width="119dp"
        android:layout_height="129dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/puzzleSquare8"
        app:layout_constraintTop_toBottomOf="@id/puzzleSquare6"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>